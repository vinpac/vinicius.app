{
  "scripts": {
    "dev": "next dev",
    "build": "yarn intl:compile && next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "intl:extract": "formatjs extract 'src/**/*.ts*' --out-file src/lang/pt-BR.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "intl:compile": "formatjs compile src/lang/en.json --ast --out-file src/generated/lang/en.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn type-check && lint-staged",
      "post-commit": "yarn type-check && git update-index --again"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@next/bundle-analyzer": "^9.5.2",
    "@reach/dialog": "^0.16.2",
    "@reach/tooltip": "^0.16.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "intl": "^1.2.5",
    "next": "^12.1.4",
    "next-react-svg": "^1.1.3",
    "next-seo": "^5.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hotkeys-hook": "^3.4.4",
    "react-icons": "^4.3.1",
    "react-intl": "^5.24.8",
    "react-string-replace": "^1.0.0",
    "react-transition-group": "^4.4.2",
    "swr": "^1.2.2"
  },
  "devDependencies": {
    "@formatjs/cli": "^4.8.3",
    "@tailwindcss/typography": "^0.5.2",
    "@testing-library/react": "^13.0.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.4.1",
    "@types/next-seo": "^2.1.2",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/react-icons": "^3.0.0",
    "@types/react-svg": "^5.0.0",
    "@types/react-transition-group": "^4.4.4",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.3.7",
    "postcss": "^7",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3"
  }
}
